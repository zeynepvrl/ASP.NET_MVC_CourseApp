@model Course

<div class="card mt-3" id="Model.Id">
    <div class="row">
        <div class="col-md-4">
            <img src="~/img/@Model.Img" class="img-fluid rounded-start" />
        </div>
        <div class="col-md-8">
            <div class="card-body">

                <a href="/course/details/@Model.Id">
                <h5 class="card-title">@Model.Title</h5>
                </a>

                <p class="card-text">@Model.Descrip</p>

            </div>

        </div>
    </div>
</div>