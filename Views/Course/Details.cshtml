@model Course

<div class="row">
    <div class="col-md-4">
        <img src="~/img/@Model.Img" class="img-fluid rounded" alt="">
    </div>
    <div class="col-md-8">
        <a asp-controller="Course" asp-action="Details" asp-route-Id="@Model.Id">
            <h5 class="card-title">@Model.Title</h5>
        </a>
        <p class="card-text"> @Model.Descrip</p>
        <div>
            @if(Model.Tags != null)
            {   
            @foreach (var tag in @Model.Tags)
            {
                <Span class="badge bg-primary"> @tag </Span>
                
            }
            }
        </div>
    </div>
</div>